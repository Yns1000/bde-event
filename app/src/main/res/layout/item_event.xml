<!-- xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/eventTitle" android:textStyle="bold" android:textSize="16sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/eventDate" android:textSize="12sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/eventDesc" android:textSize="14sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
</LinearLayout>